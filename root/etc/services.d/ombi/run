#!/usr/bin/with-contenv bash
# shellcheck shell=bash

umask "${UMASK}"

redirect_cmd() {
    if [[ "${DEBUG}" == "yes" ]]; then
        "$@"
    else
        "$@" > /dev/null 2>&1
    fi
}

# shellcheck disable=SC2086
redirect_cmd cd "${APP_DIR}" && exec s6-setuidgid hotio "${APP_DIR}/Ombi" --host http://0.0.0.0:5000 --storage "${CONFIG_DIR}/app" ${ARGS}
